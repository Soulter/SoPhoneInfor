<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">
    <Switch
        android:id="@+id/bt_show_close"
        style="@style/textViewStyle"
        android:textColor="#000"
        android:text="@string/window_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#22E7DB"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

    </View>

    <TextView
        style="@style/textViewStyle"
        android:text="@string/simple_display" />

    <CheckBox
        android:id="@+id/cb_speed_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上行流量"
        android:layout_marginLeft="@dimen/fab_margin"/>
    <CheckBox
        android:id="@+id/cb_speed_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="下行流量"
        android:layout_marginLeft="@dimen/fab_margin"/>
    <CheckBox
        android:id="@+id/cb_battery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="电量"
        android:layout_marginLeft="@dimen/fab_margin"/>
    <CheckBox
        android:id="@+id/cb_net_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fab_margin"
        android:text="网络状态"/>



    <TextView
        style="@style/textViewStyle"
        android:text="网速刷新时间/ms" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/ed_SpeedDelayTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1230"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bt_exit"
            android:hint="网速刷新时间(ms)"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="number"
            android:layout_marginLeft="@dimen/fab_margin"/>
        <Button
            android:id="@+id/ok"
            android:text="确定"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/colorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" />
    </LinearLayout>

    <TextView
        style="@style/textViewStyle"
        android:text="悬浮窗大小"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/fab_margin">
        <SeekBar
            android:id="@+id/sb_window_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_window_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="13dp"
            android:layout_weight="1"
            android:text="10"
            android:textColor="@color/colorPrimary" />

    </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#22E7DB"
            android:layout_marginTop="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp">

        </View>

        <Button
            android:id="@+id/bt_about"
            android:text="null"
            android:background="?android:attr/selectableItemBackground"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:layout_marginTop="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:autoLink="email|web" />

    </LinearLayout>




</ScrollView>